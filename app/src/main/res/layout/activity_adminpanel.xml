<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".adminpanel">


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Auto Scroll Images"
        android:id="@+id/autoscroll"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Dinning Images"
        android:id="@+id/dinning"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="HAll Images"
        android:id="@+id/hall"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="garden images"
        android:id="@+id/garden"/>
<Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Total amounts"
    android:onClick="gototal"
        android:id="@+id/total"/>


</LinearLayout>